{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard",
    ":preserveSemverRanges",
    ":disableRateLimiting",
    ":semanticCommits",
    ":semanticCommitTypeAll(renovatebot)",
    "group:monorepos",
    "group:recommended",
    "replacements:all",
    "workarounds:all"
  ],
  "enabledManagers": [
    "gradle",
    "npm",
    "regex",
    "dockerfile",
    "docker-compose",
    "github-actions"
  ],
  "rebaseWhen": "never",
  "automerge": false,
  "regexManagers": [
    {
      "fileMatch": ["run-.*\\.sh"],
      "matchStrings": [
        "export\\s+DOCKER_IMAGE\\s*=\\s*\"(?<depName>[^\"]+):(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": [".github/workflows/.*\\.yml$"],
      "matchStrings": [
        "NODE_CURRENT:\\s*'(?<currentValue>\\d+\\.\\d+\\.\\d+)'"
      ],
      "datasourceTemplate": "node",
      "depNameTemplate": "node",
      "versioningTemplate": "node"
    },
    {
      "fileMatch": [".github/workflows/.*\\.yml$"],
      "matchStrings": [
        "PYTHON_VERSION:\\s*'(?<currentValue>\\d+\\.\\d+\\.\\d+)'"
      ],
      "datasourceTemplate": "pypi",
      "depNameTemplate": "python",
      "versioningTemplate": "pep440"
    },
    {
      "fileMatch": [".github/workflows/.*\\.yml$"],
      "matchStrings": [
        "RUBY_VERSION:\\s*'(?<currentValue>\\d+\\.\\d+\\.\\d+)'"
      ],
      "datasourceTemplate": "ruby-version",
      "depNameTemplate": "ruby",
      "versioningTemplate": "semver"
    }
  ],
  "labels": ["Bot", "Renovate"],
  "schedule": [
    "after 10pm and before 6am every weekday"
  ],
  "gradle": {
    "enabled": true
  },
  "docker": {
    "enabled": true
  },
  "dockerfile": {
    "enabled": true
  },
  "docker-compose": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchPackagePatterns": [".*software.amazon.awssdk.*"],
      "matchManagers": ["maven"],
      "matchUpdateTypes": ["major", "minor"]
    },
    {
      "matchPackagePatterns": [".*com.h2database.*"],
      "matchManagers": ["maven"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "enabled": false
    },
    {
      "matchManagers": ["dockerfile"],
      "matchPaths": [".*oidc-login-strapi.*"],
      "matchPackagePatterns": ["^node$"],
      "enabled": false
    },
    {
      "matchManagers": ["gradle"],
      "matchPaths": [".*radius.*/build.gradle"],
      "matchPackageNames": ["org.bouncycastle:bcprov-jdk15on"],
      "enabled": false
    }
  ]
}
